---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import logo from '../assets/logo.webp';
import BookingForm from '../components/BookingForm.astro';
---

<Layout title="COSMOS Pizza">
  <main class="max-w-[600px] mx-auto px-4">
    <!-- Logo -->
    <a href="/" class="block w-[552px] max-w-full mx-auto mt-20 mb-12">
      <Image src={logo} alt="COSMOS Pizza" quality="high" loading="eager" format="webp" />
    </a>

    <h1 class="text-center text-2xl font-bold uppercase font-mono mx-auto mb-6">Pizza &middot; Pasta &middot; All-day Italian</h1>

    <!-- Hours -->
    <p class="text-center text-2xl text-[rgb(113,32,30)] font-mono mb-6">Mon to Fri: 11am - 4pm</p>

    <!-- Phone -->
    <a href="tel:+61493686634" class="block text-center text-2xl mb-12 transition-all duration-200 hover:scale-105">
      <span class="text-[rgb(113,32,30)] hover:animate-shake">â˜Ž</span>
      <span class="font-bold">0493 686 634</span>
    </a>

    <!-- Description -->
    <p class="text-center text-lg font-mono max-w-[556px] mx-auto mb-12">
      <strong>Everything you expect from an afternoon at Nonna's.</strong> We're an all-day Italian diner, serving pizza, pasta and aperitivo at The University of Melbourne.
    </p>

    <!-- Menu Button -->
    <a href="https://cosmos.benu.au/" class="block w-[549px] max-w-full mx-auto py-6 px-8 mb-6 rounded bg-[rgb(113,32,30)] text-white text-2xl font-mono text-center relative transition-all duration-200 hover:scale-105">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 absolute left-8 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      View Our Menu
    </a>

    <!-- Bookings Button/Accordion -->
    <div x-data="{ open: false }" class="w-[549px] max-w-full mx-auto mb-6">
      <button
        @click="open = !open"
        type="button"
        class="w-full py-6 px-8 rounded-t bg-[rgb(251,249,229)] text-[rgb(113,32,30)] text-2xl font-mono text-center relative transition-all duration-200 hover:opacity-90 border-4 border-[rgb(113,32,30)] flex items-center justify-between"
        :class="{ 'rounded-b': !open, 'border-b-0': open }"
      >
        <span class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Make a Booking
        </span>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 transition-transform duration-200" :class="{'rotate-180': open}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <div
        x-show="open"
        x-collapse
        x-cloak
        class="p-6 border-4 border-t-0 border-[rgb(113,32,30)] rounded-b bg-[rgb(251,249,229)]"
      >
        <BookingForm />
      </div>
    </div>

    <!-- Map Button -->
    <a href="https://liinks.me/cosmos-map" class="block w-[549px] max-w-full mx-auto py-6 px-8 mb-6 rounded bg-[rgb(113,32,30)] text-white text-2xl font-mono text-center relative transition-all duration-200 hover:scale-105">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 absolute left-8 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      Find Us on Maps
    </a>

    <!-- Instagram -->
    <a href="https://www.instagram.com/cosmos_unimelb/" class="block w-[549px] max-w-full mx-auto py-6 px-8 mb-6 rounded bg-gradient-to-r from-[#f9ce34] via-[#ee2a7b] to-[#6228d7] text-white text-2xl font-mono text-center relative transition-all duration-200 hover:scale-105">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 absolute left-8 top-1/2 -translate-y-1/2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
      </svg>
      See Us @cosmos_unimelb
    </a>

    <!-- Address -->
    <div class="text-center text-lg font-mono mb-12">
      <a href="https://liinks.me/cosmos-map" class="hover:opacity-70">
        <p class="font-bold">159 Monash Road, Parkville, VIC 3052</p>
        <p>(Inside the Arts and Cultural Building</p>
        <p>at The University of Melbourne)</p>
      </a>
    </div>

    <!-- Credits -->
    <a href="https://www.lanebrain.co/" class="flex items-center justify-center gap-2 text-lg font-mono" target="_blank" rel="noopener noreferrer" aria-label="Visit LaneBrain website (opens in new tab)">
      <span class="font-bold">Website by</span>
      <span class="text-[rgb(113,32,30)] font-bold">LaneBrain</span>
    </a>
  </main>
</Layout>
